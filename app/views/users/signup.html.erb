<div class="main">
    <div class="container">
        <div class="form">
          <div class="form-body">
          <%# エラーメッセージ %>
          <% @user.errors.full_messages.each do |message| %>
            <div class="form-error">
               <%= message %>
            </div>
          <% end %>
        
          <%# 新規登録ボタンが押されたらcreateに飛ぶ %>
          <%= form_tag("/users/create") do %>  
              <h2>新規ユーザ作成</h2>
              <input name="name" placeholder="ユーザ名" value="<%= @name %>">
              <input name="email" placeholder="メールアドレス" value="<%= @email %>">
              <input type="password" name="password" placeholder="パスワード" value="<%= @password %>">
              <p>半角英数字8文字以上で入力してください。<p>
              <input type="submit" value="新規登録">
          <% end %>
        </div>
    </div>
</div>