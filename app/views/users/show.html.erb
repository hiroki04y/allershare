<div class="main user-show">
  <div class="container">
    <div class="user">
      <%# アイコン %>
      <img src="<%="/user_images/#{@user.image_name}"%>">
      <!-- ユーザ名 -->
      <h2><%= @user.name%></h2>
      <!-- メールアドレス -->
      <p><%= @user.email%></p>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <%= link_to("アカウント削除", "/users/#{@user.id}/destroy") %>
      <% if session[:user_id] %>
        <%= link_to("ログアウト", "/logout") %>
      <% end %>
    </div>
  </div>
</div>