<div class="main">
    <div class="container">
        <div class="form-heading login">ユーザ情報編集</div>
        <div class="form">
          <div class="form-body">
          <%# エラーメッセージ %>
          <% @user.errors.full_messages.each do |message| %>
            <div class="form-error">
               <%= message %>
            </div>
          <% end %>
        
          <%# 新規登録ボタンが押されたらcreateに飛ぶ %>
          <%= form_tag("/users/#{@user.id}/change") do %>  
              <p>ユーザ名</p>
              <input name="name" value="<%= @user.name %>">
              <p>メールアドレス</p>
              <input name="email" value="<%= @user.email %>">
              <p>パスワード</p>
              <input type="password" name="password" value="<%= @user.password %>">
              <input type="submit" value="編集">
            </div>
          <% end %>
        </div>
    </div>
</div>