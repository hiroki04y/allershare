<% breadcrumb :blog_search %>
<div class="blog_view-top">

    <div class="v4">

      <% @blogs.each do |blog| %>
        <div class="blog_view-display">
            <img src="<%="/blog_images/#{blog.image}"%>"class="blog-view-image"><br>
            <div class="blog_view_title">
                <%= link_to(blog.title,"/blog_view/#{blog.id}") %><br>
            </div>
        </div>
      <% end %>

    </div>

    <% if @current_user == nil %>
    <div class="v6">
        <div class="under">
            <div class="bottom-top">
                <div class="manage">
                    <img src="/管理.png" class="manage-logo" width=80 height=80>
                </div>
            <div class="talk">
                <img src="/会話.png" class="talk-logo" width=80 height=80>
            </div>
            <div class="outgo">
                <img src="/発信.png" class="outgo-logo" width=40 height=40>
            </div>
        </div>
        <div class="bottom-middle">
            <div class="manage-se">
                <h5>管理</h5>
                <h6><br>自分のアレルギー<br>情報をまとめて管理</h6>
            </div>
            <div class="talk-se">
                <h5>会話</h5>
                <h6><br>ほかのユーザーと<br>チャットで<br>情報交換<br></h6>
            </div>
            <div class="outgo-se">
                <h5>発信</h5>
                <h6><br>ブログの投稿が<br>可能になる</h6>
            </div>
        </div>
        <div class="bottom-bottom">
            <a class="button4" href="/signup">アカウント作成</a>
            <a class="button5" href="/login">ログイン</a>
        </div>
        </div>
    </div>
    <% end %>

    <div class="v7">
        <img src="/rogo2.PNG" class="under-logo" width=220 height=60>
        <img src="/ひよこ.png" class="animal-logo" width=90 height=75>
    </div>

</div>