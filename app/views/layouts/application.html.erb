      <div class="header-logo">
        <%= link_to "/" do %>
          <img src="/rogo2.png" width=190 height=50>
        <% end %>
      </div>
      <div class="header-menus">
        <%= link_to "/use" do %>
          <div class="header-select">
            <div class="header-text explanation"><ion-icon name="bulb-outline" class="header-icon"></ion-icon>アレルシェアについて</div>
          </div>
        <% end %>
        <%= link_to "/blog_view" do %>
          <div class="header-select">
            <div class="header-text header-blog"><ion-icon name="reader-outline" class="header-icon"></ion-icon>ブログを探す</div>
          </div>
        <% end %>
        <%= link_to "/chat" do %>
          <div class="header-select">
            <div class="header-text header-chat"><ion-icon name="logo-wechat" class="header-icon"></ion-icon>チャット</div>
          </div>
        <% end %>
        <a href="#"><div class="header-space"></div></a>
          <% if @current_user %>
            <% if @current_user.image_name == "default_image.jpg" %>
                <a href="/users/<%= @current_user.id %>"><img src="/user_images/default_image.jpg" width=40 height=40></a>
            <% else %>
                <a href="/users/<%= @current_user.id %>" id="<%= @current_user.id %>" class="login_user"><img src="/user_images/<%= @current_user.id %>.jpg" width=40 height=40></a>
            <% end %>
          <% else %>
              <a href="/login"><img src="/user_images/default_image.jpg" width=40 height=40></a>
          <% end %>
      </div>
    </header>
    

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="blackcover"></div>

    <script>

    </script>
    <%= breadcrumbs separator: " &rsaquo; " %>
    <%= yield %>
    <!-- icon -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
